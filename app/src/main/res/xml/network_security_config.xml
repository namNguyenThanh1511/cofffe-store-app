<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="false">  <!-- Không cho HTTP, chỉ HTTPS -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>  <!-- Emulator -->
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Thêm IP máy host nếu test device: <domain includeSubdomains="true">192.168.1.100</domain> -->
    </domain-config>
    <!-- Trust self-signed cert cho localhost -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system certs + user-added -->
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>