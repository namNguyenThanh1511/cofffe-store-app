<resources>
    <!-- App theme -->
    <style name="Theme.CoffeeStore" parent="Theme.Material3.Light.NoActionBar">
        <!-- màu chủ đạo của bạn -->
        <item name="colorPrimary">#6D4C41</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <!-- Biến thể không có ActionBar -->
    <style name="Theme.CoffeeStore.NoActionBar" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#6D4C41</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.CoffeStore" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/coffee_dark</item>
        <item name="android:navigationBarColor">@color/coffee_dark</item>

        <!-- Make all MaterialButtons use our style by default -->
        <item name="materialButtonStyle">@style/CoffeeButton</item>
    </style>

    <!-- Theme without ActionBar for MenuActivity -->
    <style name="Theme.CoffeStore.NoActionBar" parent="Theme.CoffeStore">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/gradient_top</item>
    </style>

    <!-- Our accent-filled button -->
    <style name="CoffeeButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/coffee_accent</item>
        <item name="android:textColor">@color/coffee_dark</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!-- Rounded corners for ImageView -->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
</resources>
