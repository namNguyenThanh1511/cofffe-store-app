<resources>
    <style name="Theme.CoffeStore" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/coffee_dark</item>
        <item name="android:navigationBarColor">@color/coffee_dark</item>

        <!-- Make all MaterialButtons use our style by default -->
        <item name="materialButtonStyle">@style/CoffeeButton</item>
    </style>

    <!-- Our accent-filled button -->
    <style name="CoffeeButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/coffee_accent</item>
        <item name="android:textColor">@color/coffee_dark</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">6dp</item>
    </style>
</resources>
