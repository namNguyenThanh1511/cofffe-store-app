<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_detail_gradient"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Product Image Container -->
        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bg_product_gradient"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Product Image" />
            
            <!-- Gradient Overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_image_overlay" />

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:background="@drawable/bg_avatar"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true" />

            <!-- Favorite Button -->
            <ImageView
                android:id="@+id/btnFavorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:background="@drawable/bg_avatar"
                android:padding="8dp"
                android:src="@drawable/ic_favorite"
                android:contentDescription="Favorite"
                android:clickable="true"
                android:focusable="true" />
        </FrameLayout>

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/imageContainer">

            <!-- Product Name -->
            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Creamy Latte Coffee"
                android:textColor="@color/text_white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/product_description"
                android:textColor="@color/text_gray"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

            <!-- Coffee Size Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/coffee_size"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Add Customization Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/brown_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:id="@+id/btnOpenCustomize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_plus"
                        android:background="@drawable/bg_round_accent"
                        android:padding="8dp"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tùy chỉnh đơn hàng"
                            android:textColor="@color/text_white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chọn kích cỡ, nhiệt độ, độ ngọt..."
                            android:textColor="@color/text_gray"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@color/coffee_accent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Temperature Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Nhiệt độ"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="start"
                android:visibility="gone">

                <TextView
                    android:id="@+id/btnTempHot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_size_button"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Nóng"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btnTempColdBrew"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_size_button"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Pha lạnh"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btnTempIce"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_size_button"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Đá"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Sweetness Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Độ ngọt"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="start"
                android:visibility="gone">

                <TextView
                    android:id="@+id/btnSweetnessSweet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/bg_size_button"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Ngọt"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btnSweetnessNormal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/bg_size_button"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Bình thường"
                    android:textColor="@color/text_white"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btnSweetnessLess"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/bg_size_button"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Ít ngọt"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btnSweetnessNoSugar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_size_button"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Không đường"
                    android:textColor="@color/text_white"
                    android:textSize="11sp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Milk Type Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Loại sữa"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="start"
                android:visibility="gone">

                <TextView
                    android:id="@+id/btnMilkDairy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/bg_size_button"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Sữa tươi"
                    android:textColor="@color/text_white"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btnMilkCondensed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/bg_size_button"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Sữa đặc"
                    android:textColor="@color/text_white"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btnMilkPlant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/bg_size_button"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Sữa thực vật"
                    android:textColor="@color/text_white"
                    android:textSize="11sp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btnMilkNone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_size_button"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Không sữa"
                    android:textColor="@color/text_white"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Price and Quantity Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Price -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$6.7"
                        android:textColor="@color/text_white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="$8.2"
                        android:textColor="@color/price_old"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_quantity_button"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/btnDecreaseQty"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="8dp"
                        android:src="@android:drawable/ic_delete"
                        android:tint="@color/text_white"
                        android:contentDescription="Decrease"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless" />

                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/text_white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnIncreaseQty"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="8dp"
                        android:src="@android:drawable/ic_input_add"
                        android:tint="@color/text_white"
                        android:contentDescription="Increase"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless" />
                </LinearLayout>
            </LinearLayout>

            <!-- About Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/about"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/product_description"
                android:textColor="@color/text_gray"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:visibility="gone" />

            <!-- Selected Addons Display -->
            <TextView
                android:id="@+id/tvSelectedAddons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text=""
                android:textColor="@color/coffee_accent"
                android:textSize="14sp"
                android:visibility="gone" />

            <!-- Add to Cart Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddToCart"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:text="Thêm vào giỏ"
                    android:textColor="@color/text_white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/brown_button_selected"
                    app:cornerRadius="12dp" />

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$6.15"
                    android:textColor="@color/text_white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
