<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/brown_card"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Product Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ivCartItemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Product Image" />
        </androidx.cardview.widget.CardView>

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Product Name -->
            <TextView
                android:id="@+id/tvCartItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Creamy Coffee"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Size -->
            <TextView
                android:id="@+id/tvCartItemSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Medium"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />
            
            <!-- Customization Details -->
            <TextView
                android:id="@+id/tvCartItemCustomization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Nóng • 50% đường • Sữa bò"
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                android:alpha="0.8" />

            <!-- Price and Quantity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Price -->
                <TextView
                    android:id="@+id/tvCartItemPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$4.00"
                    android:textColor="@color/text_white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_quantity_button"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/btnDecreaseQty"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:padding="6dp"
                        android:src="@android:drawable/ic_delete"
                        android:tint="@color/text_white"
                        android:contentDescription="Decrease"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless" />

                    <TextView
                        android:id="@+id/tvCartItemQty"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/text_white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnIncreaseQty"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:padding="6dp"
                        android:src="@android:drawable/ic_input_add"
                        android:tint="@color/text_white"
                        android:contentDescription="Increase"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Remove Button -->
        <ImageView
            android:id="@+id/btnRemoveItem"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:padding="6dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@color/text_gray"
            android:contentDescription="Remove"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
