<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoffeStore"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"><!-- Cho phép HTTP để load ảnh từ internet -->
        <activity
            android:name=".ui.activities.LoginActivity"
            android:exported="true">
            <!-- Temporarily disabled for testing MenuActivity -->
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>
        <activity android:name=".ui.activities.RegisterActivity" />
        <activity 
            android:name=".ui.activities.MenuActivity"
            android:exported="true"
            android:theme="@style/Theme.CoffeStore.NoActionBar">
            <!-- TEMPORARY: For testing MenuActivity directly -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".ui.activities.ProductDetailActivity"
            android:theme="@style/Theme.CoffeStore.NoActionBar"
            android:parentActivityName=".ui.activities.MenuActivity" />
        <activity 
            android:name=".ui.activities.CartActivity"
            android:theme="@style/Theme.CoffeStore.NoActionBar"
            android:parentActivityName=".ui.activities.MenuActivity" />
        <activity 
            android:name=".ui.activities.ProfileActivity"
            android:theme="@style/Theme.CoffeStore.NoActionBar"
            android:parentActivityName=".ui.activities.MenuActivity" />
        <!--    <activity android:name=".ui.activities.MainActivity" />-->
    </application>

</manifest>