<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Quyền mạng & thông báo -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Quyền & phần cứng vị trí (cho OSM/Map) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.network"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoffeeStore"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">

        <!-- SPLASH: màn hình khởi động (Launcher) -->
        <activity
            android:name=".ui.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.CoffeeStore.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Đăng nhập/Đăng ký -->
        <activity
            android:name=".ui.activities.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:exported="false" />

        <!-- HOME (Menu) – không còn MAIN/LAUNCHER (bản origin dùng tạm để test) -->
        <activity
            android:name=".ui.activities.MenuActivity"
            android:exported="true"
            android:theme="@style/Theme.CoffeeStore.NoActionBar" />

        <!-- Chi tiết sản phẩm -->
        <activity
            android:name=".ui.activities.ProductDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.CoffeeStore.NoActionBar"
            android:parentActivityName=".ui.activities.MenuActivity" />

        <!-- Giỏ hàng -->
        <activity
            android:name=".ui.activities.CartActivity"
            android:exported="false"
            android:theme="@style/Theme.CoffeeStore.NoActionBar"
            android:parentActivityName=".ui.activities.MenuActivity" />

        <!-- Hồ sơ người dùng (giữ logic của bạn) -->
        <activity
            android:name=".ui.activities.UserProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.CoffeeStore.NoActionBar" />

        <!-- (Từ origin) ProfileActivity – giữ để không phá các navigation mới; có thể trỏ về cùng theme -->
        <activity
            android:name=".ui.activities.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.CoffeeStore.NoActionBar"
            android:parentActivityName=".ui.activities.MenuActivity" />

        <!-- Bản đồ OSM (giữ logic của bạn) -->
        <activity
            android:name=".ui.activities.OsmMapActivity"
            android:exported="false"
            android:theme="@style/Theme.CoffeeStore.NoActionBar"
            android:parentActivityName=".ui.activities.MenuActivity" />

        <!-- <activity android:name=".ui.activities.MainActivity" /> -->
    </application>

</manifest>
